# ── Mode ──
# BACKTEST | PAPER | LIVE
MODE=PAPER

# ── Private API (실거래/테스트 주문) — 빗썸 ──
BITHUMB_BASE_URL=https://api.bithumb.com
BITHUMB_ACCESS_KEY=your_access_key_here
BITHUMB_SECRET_KEY=your_secret_key_here
# 401 jwt_verification 시: Secret을 문자열 그대로 쓰려면 BITHUMB_SECRET_RAW=true

# ── Risk ──
RISK_PER_TRADE_PCT=0.01
MAX_DAILY_LOSS_PCT=0.03
MAX_POSITION_KRW=500000
MAX_DAILY_TRADES=10
COOLDOWN_MINUTES=30
MIN_SPREAD_BPS=10
MIN_ATR_KRW=50000

# ── Strategy: Donchian Breakout ──
DONCHIAN_PERIOD=20
ATR_PERIOD=14
ATR_STOP_MULTIPLIER=2.0
EMA_FILTER_PERIOD=50
TRAILING_STOP_ATR_MULTIPLIER=3.0

# ── Execution ──
FEE_RATE=0.0025
SLIPPAGE_BPS=5
ORDER_TIMEOUT_MS=5000
MAX_RETRIES=3
# 주문 전 현재가 검증: 캔들 종가와 티커 가격 차이(%) 초과 시 진입 스킵 (0.5 = 0.5%)
MAX_PRICE_DRIFT_PCT=0.5

# ── Capital (전략별 배분 비율 합 1.0) ──
INITIAL_CAPITAL_KRW=10000000
MAX_ALLOCATION_DONCHIAN=0.5
MAX_ALLOCATION_DCA=0.3
MAX_ALLOCATION_RSI_FEAR=0.2

# ── 전략 A: 장기 DCA ──
DCA_MONTHLY_DAY=1
DCA_WEEKLY_DAY=-1
DCA_MONTHLY_AMOUNT_KRW=100000
DCA_DIP_BUY_KRW=50000
DCA_DIP_THRESHOLD_PCT=15
DCA_DIP_COOLDOWN_DAYS=7
DCA_HIGH_LOOKBACK_DAYS=30

# ── 전략 B: RSI + 공포지수 ──
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
FEAR_MAX=20
RSI_ENTRY_SPLITS=3
RSI_OVERHEAT_RISE_PCT=5
RSI_OVERHEAT_BARS=10
RSI_STOP_LOSS_PCT=3
RSI_TRAILING_ATR_MULT=2.0
FEAR_GREED_CACHE_MINUTES=60

# ── Paper → Live Promotion ──
PAPER_MIN_DAYS=14
PAPER_MIN_TRADES=200
PAPER_MIN_PF=1.2
PAPER_MAX_MDD_PCT=20
PAPER_MAX_ORDER_FAIL_PCT=1

# ── Database ──
DB_PATH=./data/trading.db

# ── Logging ──
LOG_LEVEL=info
